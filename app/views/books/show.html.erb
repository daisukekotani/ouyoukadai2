<div class="container">
<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
	  <%= render 'books/profile', book: @book%>

		<h2>New book</h2>
		<%= render 'books/newform', book: @booknew %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
				<tr>
					<td><!--ユーザー画像-->
						<%= link_to user_path(@book.user) do %>
						<%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
						<%= @book.user.name %>
						<% end %>
					</td>
					<td><!--本のタイトル-->
						<%= link_to @book.title, book_path(@book) %>
					</td>
					<td><!--本の感想-->
						<%= @book.body %>
					</td>
					<td><!--いいねボタン-->
					　<div id="fovo-btn-<%= @book.id %>">
            <%= render 'books/favo', book: @book %>
            </div>
          </td>
          <td><!--コメント件数-->
　　　　　　<%= @book.post_comment.count %>件コメント
          </td>
					 <% if @book.user == current_user %>
					<td><%= link_to "Edit", edit_book_path(@book), class: "btn-sm btn-success edit_book_#{@book.id}" %></td>
					<td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %></td>
					<% end %>
				</tr>
			</table>


        <% @book.post_comments.each do |post_comment| %><!--コメント本文-->
　　　	<table class="table">
　　　		<tr>
　　　			<td><!--ユーザー画像-->
　　　				<%= link_to user_path(@book.user) do %>
						　<%= attachment_image_tag(@book.user, :profile_image, :fill, 40, 40, fallback: "no-image-mini.jpg") %><br>
						　<%= @book.user.name %>
						　<% end %>
　　　			</td>
　　　			<td><!--コメント本文-->
　　　			<%= post_comment.user.name %>
　　　			<%= post_comment.created_at.strftime('%Y/%m/%d') %>
　　　			<%= post_comment.comment %>
　　　			</td>
　　　			<% if @book.user == current_user %>
　　　			<td><!--削除ボタン　ログインユーザーのみ-->
　　　			<%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %>
　　　			</td>
　　　		</tr>
　　　	</table>
　　　	<% end %>
　　　	<% end %>


　　　	<!--コメント入力フォーム-->
　　　	<%= form_with(model:[@book, @post_comment], local: true) do |f| %>
        <div class="row">
        <div class="col-sm-12">
        <%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
        </div>
        </div>
        <%= f.submit "送信する", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
        <% end %>
	</div>
</div>
</div>


