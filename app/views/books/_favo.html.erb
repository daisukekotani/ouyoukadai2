<td><!--いいね機能-->
	<% if book.favorited_by?(current_user) %>
    <li>
      <%= link_to(book_favorites_path(book.id), method: :delete, remote: true, id: :"favo-button-#{book.id}") do %>
      <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
      <%= book.favorites.count %>
      <% end %>
    </li>
      <% else %>
    <li>
      <%= link_to(book_favorites_path(book.id), method: :post, remote: true, id: :"favo-button-#{book.id}") do %>
      <i class="fa fa-heart-o" aria-hidden="true"></i>
      <%= book.favorites.count %>
      <% end %>
    </li>
  <% end %>
</td><!--いいね機能-->