<table class="table">
	<tr><%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>

	<tr>
		<th>name</th>
		<th><%= @book.user.name %></th>
	</tr>

	<tr>
		<th>introduction</th>
		<th><%= @book.user.introduction %></th>
	</tr>
</table>

<%  if book.user.id == current_user.id %>
<%= link_to edit_user_path(book.user) do %>
  <span class="col-xs-12 btn btn-default glyphicon glyphicon-wrench"></span>
<% end %>
<% end %>